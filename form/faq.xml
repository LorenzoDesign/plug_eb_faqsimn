<?xml version="1.0" encoding="utf-8"?>
<form>
	<field
			name="faqs"
			type="subform"
			label="Faqs"
			description="Lista Faqs"
			layout="joomla.form.field.subform.repeatable-table"
			icon="list"
			multiple="true"
	>
		<form hidden="true" name="list_faqs" repeat="true">
			<field
				name="id"
				type="hidden"
				value="0"
			/>
			<field
				name="domanda"
				type="text"
				label="Domanda"
				size="10"
			/>
			<field 
				name="risposta" 
				type="textarea" 
				label="Risposta" 
				description="La risposta alla domanda"
				width="300" 
				filter="safehtml" />
		</form>
	</field>
</form>
